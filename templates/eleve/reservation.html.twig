{% extends 'base.html.twig' %}

{% block title %}{{'template.reservation'|trans}}{% endblock %}
{% block body %}
    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <h2 class="text-center">Place restantes</h2>
                    <div class="row">
                        <div class="col-12">
                            <table class = "table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        {% for heure in heures %}
                                            <th>{{ heure }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for nom, heures_rdv in tab_place %}
                                        <tr>
                                            <td>{{ nom }}</td>
                                            {% for heure in heures %}
                                                <td>{{ heures_rdv[heure] }}</td>
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <h2 class="text-center">{{'template.reservation'|trans}}</h2>
                    <p class="text-center">{{'template.resa_info1'|trans}}</p>
                    <p class="text-center">{{'template.resa_info2'|trans}}</p>
                    <div class = "custom-form">
                        <div class = "container">
                            {% include 'flash_message.html.twig'%}
                            {{ form_start(forms) }}
                                <table class="table">
                                    <thead>
                                        <tr>
                                        <th scope="col">{{'template.heure'|trans}}</th>
                                        <th scope="col">{{'template.pro'|trans}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for form in forms.reservation %}
                                            <tr>
                                                <td>{{heures[loop.index0]}}</td>
                                                <td>{{ form_widget(form.pro) }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                                <div class="d-grid gap-2 col-3 mx-auto">
                                    <button type="submit" class = "btn btn-secondary">{{'template.resa_button'|trans}}</button>
                                </div>
                            {{ form_end(forms) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
