{% extends "base.html.twig" %}
{% block title %}{{ eleve.nom }} - {{ eleve.prenom }}{% endblock %}
{% block body %}
<section class="section-padding">
    <div class="container">
        <h2 class="text-center">{{'template.info_gene'|trans}}</h2>
        <a href = "{{path ('impression_fiche_eleve', {nom : eleve.nom, prenom : eleve.prenom, id : eleve.id})}}" role = 'button' class = "btn btn-info btn-sm" target = "_blank"><i class="bi bi-printer-fill"></i></a>
        <hr />
        <div class="row">
            <div class="col-md-8 text-center align-self-center">
                <p><strong>{{'template.nom'|trans}} :</strong> {{ eleve.nom }}</p>
                <p><strong>{{'template.prenom'|trans}} :</strong> {{ eleve.prenom }}</p>
                <p><strong>{{'template.filiere'|trans}} :</strong> {{ eleve.filiere }}</p>
                {# <p><strong>Entreprise :</strong> {{ eleve.entreprise }}</p> #}
            </div>
            <div class="col-md-4 align-self-center">
                <img src="{{vich_uploader_asset(eleve)}}" alt="{{'template.photo'|trans}} {{eleve.nom}} {{eleve.prenom}}" class="img-fluid" style = "width: 50%;">
            </div>
        </div>
        <hr />
        <div class='row'>
            <div class='col-12'>
                <h2 class="text-center">{{'template.quest_etud'|trans}}</h2>
                <p>{{ eleve.question | nl2br }}</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
