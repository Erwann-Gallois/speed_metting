{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    <section class="hero-section" id="">
            <div class="section-overlay"></div>
            <div class="container d-flex justify-content-center align-items-center">
                <div class="row">
                    <div class="col-12 mt-auto mb-5 text-center">
                        <small>Coloque EvryBio présente : </small>
                        <h1 class="text-white mb-5">Speed Meetings 2024</h1>
                        {% if app.user %}
                            <div class="btn-group" role="group">
                                <button type="button" class="btn custom-btn-dropdown dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Mon compte</button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{path ('compte')}}">Profil</a></li>
                                    <li><a class="dropdown-item" href="{{path ('planning')}}">Planning</a></li>
                                    {% if afficherLien %}
                                        <li><a href = "{{path ("reservation")}}" class = "dropdown-item">Reserver</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        {% else %}
                            <a class="btn btn-secondary" href="{{path ("inscription")}}">Inscription</a>
                        {% endif %}
                        {% if app.user %}
                            <a class="btn btn-secondary" href="{{path ('deconnexion')}}">Deconnexion</a>
                        {% else %}
                            <a class="btn btn-secondary" href="{{path ('connexion')}}">Connexion</a>
                        {% endif %}
                    </div>

                    <div class="col-lg-12 col-12 mt-auto d-flex flex-column flex-lg-row text-center">
                        <div class="date-wrap">
                            <h5 class="text-white">
                                <i class="custom-icon bi-clock me-2"></i>
                                21 Mai 2024
                            </h5>
                        </div>

                        <div class="location-wrap mx-auto py-3 py-lg-0">
                            <h5 class="text-white">
                                <i class="custom-icon bi-geo-alt me-2"></i>
                                31 cours Blaise Pascal, 91000 Évry-Courcouronnes
                            </h5>
                        </div>

                        <div class="social-share">
                            <ul class="social-icon d-flex align-items-center justify-content-center">
                                <span class="text-white me-3">Social:</span>

                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link">
                                        <span class="bi-facebook"></span>
                                    </a>
                                </li>

                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link">
                                        <span class="bi-twitter"></span>
                                    </a>
                                </li>

                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link">
                                        <span class="bi-instagram"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class = "image-wrap">
                <img src="{{asset ("images/header.jpg")}}" alt="...">
            </div>
            {# <div class="video-wrap">
                <video autoplay="" loop="" muted="" class="custom-video" poster="">
                    <source src="video/pexels-2022395.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div> #}
        </section>
        {% include 'flash_message.html.twig' %}
        <section class="artists-section section-padding" id="presentation">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 text-center">
                        <h2 class="mb-4 text-white">Rencontrer les professionnels</h1>
                    </div>
                    {% for pro in pros %}
                        <div class="col-lg-5 col-12">
                            <a href="{{path ('front_pro', {'id': pro.id, "nom" : pro.nom, 'prenom' : pro.prenom })}}">
                                <div class="artists-thumb">
                                    <div class="artists-image-wrap d-flex justify-content-center">
                                        <img src="{{vich_uploader_asset(pro)}}" alt="Photo du professionnel {{pro.nom}} {{pro.prenom}}" class="artists-image img-fluid" style = "width: 50%;">
                                    </div>
                                    <div class="artists-hover">
                                        <p><strong>Nom : </strong>{{pro.nom}}</p>
                                        <p><strong>Prenom:</strong>{{pro.prenom}}</p>
                                        <p><strong>Intitulé du poste:</strong>{{pro.poste}}</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="text-center mt-5">
                <a href="" class="btn btn-dark">Liste Complète</a>
            </div>
        </section>

        <section class="schedule-section section-padding" id="organisation">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white mb-4">Organisation de la journée</h2>
                            <div class="table-responsive">
                                <table class="schedule-table table table-dark table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Heure</th>
                                            <th>Activités</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr>
                                            <td scope = "row">14h00 - 15h00</td>
                                            <td>
                                                Premiere Session<br />
                                                Partie Question - Reponse par Groupe
                                            </td>
                                        </tr>
                                        <tr>
                                            <td scope = "row">15h00 - 15h30</td>
                                            <td>
                                                Premiere Session<br />
                                                Partie Libre + Pause gourmande
                                            </td>
                                        </tr>
                                        <tr>
                                            <td scope = "row">16h00 - 17h00</td>
                                            <td>
                                                Deuxieme Session<br />
                                                Partie Question - Reponse par Groupe
                                            </td>
                                        </tr>
                                        <tr>
                                            <td scope = "row">17h00 - 17h30</td>
                                            <td>
                                                Deuxieme Session<br />
                                                Partie Libre + Pause gourmande
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        <a href="{{path ('organisation')}}" class="btn btn-dark">En savoir plus</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="contact-section section-padding" id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-12 mx-auto">
                        <h2 class="text-center mb-4">Nous Contactez</h2>
                        <nav class="d-flex justify-content-center">
                            <div class="nav nav-tabs align-items-baseline justify-content-center" id="nav-tab"
                                role="tablist">
                                <button class="nav-link active" id="nav-ContactForm-tab" data-bs-toggle="tab"
                                    data-bs-target="#nav-ContactForm" type="button" role="tab"
                                    aria-controls="nav-ContactForm" aria-selected="false">
                                    <h5>Formulaire</h5>
                                </button>

                                <button class="nav-link" id="nav-ContactMap-tab" data-bs-toggle="tab"
                                    data-bs-target="#nav-ContactMap" type="button" role="tab"
                                    aria-controls="nav-ContactMap" aria-selected="false">
                                    <h5>Google Maps</h5>
                                </button>
                            </div>
                        </nav>
                        <div class="tab-content shadow-lg mt-5" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-ContactForm" role="tabpanel"aria-labelledby="nav-ContactForm-tab">
                                <div class = "custom-form">
                                    {{ form_start(form) }}
                                    <div class="contact-form-body">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-12">
                                                {{form_row(form.nom)}}
                                            </div>

                                            <div class="col-lg-6 col-md-6 col-12">
                                                {{form_row(form.email)}}
                                            </div>
                                        </div>
                                        {{form_row(form.sujet)}}
                                        {{form_row(form.message)}}
                                        <div class="col-lg-4 col-md-10 col-8 mx-auto">
                                            <button type="submit" class = "form-control">Envoyer</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>

                            <div class="tab-pane fade" id="nav-ContactMap" role="tabpanel"
                                aria-labelledby="nav-ContactMap-tab">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2637.192130685937!2d2.425795391858858!3d48.625305343092464!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e5de1b71db3e7d%3A0xc2b3c2bba0107943!2s31%20Cr%20Blaise%20Pascal%2C%2091000%20%C3%89vry-Courcouronnes!5e0!3m2!1sfr!2sfr!4v1706798837272!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                <!-- You can easily copy the embed code from Google Maps -> Share -> Embed a map // -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
