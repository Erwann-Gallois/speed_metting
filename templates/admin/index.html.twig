{% extends 'base_back.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <div class = "container">
        <h1 class="text-center">Bienvenue sur le côté organisation</h1>
        <hr />
        <h2>Liens utiles</h2>
        <ul>
            <li>
                <a href="https://drive.google.com/drive/folders/1VrEDYPi4t1igFjhSruPWiIRmnaTK47uh?usp=sharing">Lien du Google Drive</a>
            </li>
        </ul>
        <hr />
        <h2>Statistiques : </h2>
        <p>Nombre total d'eleve : {{nbre_eleve}}/66</p>
        <p>Nombre de professionnel enregistrer : {{nbre_pro}}</p>
        <div class="row">
            <div class = 'col-lg-3 col-md-6'>
                <p>Nombre de personnes par groupes : {{nbre_place_groupe}}</p>
            </div>
            <div class = 'col-lg-9 col-md-6'>
                {{ form_start(form) }}
                    <div class = 'row'>
                        <div class = 'col-lg-10 col-md-6'>{{ form_widget(form) }}</div>
                        <div class = 'col-lg-2 col-md-6'><button type="submit" class="btn btn-primary">Mettre à jour</button></div>
                    </div>
                {{ form_end(form) }}    
            </div>
        </div>
        <div class="row">
            <div class = 'col-lg-3 col-md-6'>
                <p>Nombre de personnes par session : {{nbre_place_session}}</p>
            </div>
            <div class = 'col-lg-9 col-md-6'>
                {{ form_start(form2) }}
                    <div class = 'row'>
                        <div class = 'col-lg-10 col-md-6'>{{ form_widget(form2) }}</div>
                        <div class = 'col-lg-2 col-md-6'><button type="submit" class="btn btn-primary">Mettre à jour</button></div>
                    </div>
                {{ form_end(form2) }}    
            </div>
        </div>
        <div class="row">
            <div class = 'col-lg-3 col-md-6'>
                <p>Date d'ouverture des réservations : {{date}}</p>
            </div>
            <div class = 'col-lg-9 col-md-6'>
                {{ form_start(form3) }}
                    <div class = 'row'>
                        <div class = 'col-lg-10 col-md-6'>{{ form_widget(form3) }}</div>
                        <div class = 'col-lg-2 col-md-6'><button type="submit" class="btn btn-primary">Mettre à jour</button></div>
                    </div>
                {{ form_end(form3) }}    
            </div>
        </div>
        <a href = "{{path ("creer_pro")}}" class = "btn btn-info">Ajouter un professionnel</a>
    </div>
{% endblock %}
