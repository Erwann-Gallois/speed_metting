{% extends 'base_back.html.twig' %}
{% block title %}
    Liste des professionnels
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="text-center">Liste des professionnels</h1>
        <hr />
        {{ form_start(form, {'method': 'POST'}) }}
            <table class="table table-striped table-hover table-responsive">
                <thead class = "table-dark">
                <tr>
                    <th>Selection</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Mail</th>
                    {# <th>Validé</th> #}
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for pro in pros %}
                    {# {% set cpt = loop.index0 %} #}
                    <tr>
                        <td>
                            {{ form_row(form["email_"~ loop.index0]) }}
                        </td>
                        <td>{{ pro.nom }}</td>
                        <td>{{ pro.prenom }}</td>
                        <td>{{ pro.email }}</td>
                        {# <td>{{ pro.valide }}</td> #}
                        <td>
                            <a href="{{path ("front_pro", {nom : pro.nom, prenom : pro.prenom, id : pro.id})}}" class="btn btn-sm btn-primary"><i class="bi bi-eye-fill"></i></a>
                            <a href="" class="btn btn-sm btn-secondary"><i class="bi bi-envelope-at-fill"></i></a>
                            <a href="{{path ("impression_fiche_professionnel", {nom : pro.nom, prenom : pro.prenom, id : pro.id})}}" class="btn btn-sm btn-warning" target="_blank"><i class="bi bi-printer-fill"></i></a>
                            <a href="" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {{ form_end(form) }}
    </div>
{% endblock %}